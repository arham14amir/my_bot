<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

<!-- BASE LINK-->
<link name="base_link">
</link>

<!-- CHASSIS LINK -->
<joint name="chassis_joint" type="fixed">
  <parent link="base_link"/>
  <child link="chassis"/>
  <origin xyz="0 0 0" rpy="1.5708 0 0"/>
</joint>

<link name="chassis">
  <visual>
    <origin xyz="-0.1524 0 -0.1524"/>
    <geometry>
      <mesh filename="package://my_bot/meshes/chesi.STL" scale="0.001 0.001 0.001"/>
    </geometry>
  </visual>
  <collision>
    <origin xyz="-0.1524 0 -0.1524"/>
    <geometry>
      <mesh filename="package://my_bot/meshes/chesi.STL" scale="0.001 0.001 0.001"/>
    </geometry>
    <surface>
      <friction>
        <ode>
          <mu>2</mu> <!-- Coefficient of friction -->
          <mu2>2</mu2> <!-- Secondary coefficient of friction -->
        </ode>
      </friction>
       <contact>
          <ode>
            <kp>500000.0</kp>
            <kd>100</kd>
          </ode>
        </contact>
    </surface>
  </collision>
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="10.0"/>
     <inertia 
        ixx="0.0116" ixy="0.0" ixz="0.0"
        iyy="0.0116" iyz="0.0"
        izz="0.0465"/>
  </inertial>
</link>

<!-- FRONT LEFT WHEEL LINK -->
<joint name="front_left_wheel_joint" type="continuous">
  <parent link="chassis"/>
  <child link="front_left_wheel"/>
  <origin xyz="0.07854 0.01 0.068" rpy="-1.5709 1.5709 0"/>
  <axis xyz="0 1 0"/>
</joint>

<link name="front_left_wheel">
  <visual>
    <origin xyz="-0.0358 0.0172 -0.034" rpy="1.5709 0 1.5709"/>
    <geometry>
      <mesh filename="package://my_bot/meshes/tyre.STL" scale="-0.001 0.001 0.001"/>
    </geometry>
  </visual>
  <collision>
    <origin xyz="-0.0358 0.0172 -0.034" rpy="1.5709 0 1.5709"/>
    <geometry>
      <mesh filename="package://my_bot/meshes/tyre.STL" scale="-0.001 0.001 0.001"/>
    </geometry>
    <surface>
      <friction>
        <ode>
          <mu>2</mu> <!-- Coefficient of friction -->
          <mu2>2</mu2> <!-- Secondary coefficient of friction -->
        </ode>
      </friction>
       <contact>
          <ode>
            <kp>500000.0</kp>
            <kd>100</kd>
          </ode>
        </contact>
    </surface>
  </collision>
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="0.5"/>
   <inertia 
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0"
        izz="0.0012"/>
  </inertial>
</link>

